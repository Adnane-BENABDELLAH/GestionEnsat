@model IEnumerable<AspCoreApp.Models.Eleve>

@{
    ViewData["Title"] = "Index";
}


<hr />
<h4 class="text-center">Mini ENSAT : Liste des Élèves</h4>
<hr />
    <form asp-action="Index" asp-controller="Eleves">
        <div class="row justify-content-center" style="margin-bottom:20px">
            <div class="col-5">
                <input type="text" class="form-control p-3" name="cne" placeholder="Saisir l'étudiant à chercher">
            </div>
            <div class="col-3">
                <button type="submit" class="btn btn-info">Chercher</button>
            </div>
        </div>
    </form>
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th>
                    CNE
                </th>
                <th>
                    Prenom
                </th>
                <th>
                    Nom
                </th>
                <th>
                    E-mail
                </th>
                <th>
                    Filière
                </th>
                <th>
                    Num. Tél
                </th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @if (ViewBag.message == null)
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.cne)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.prenom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.nom)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.email)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.filiere)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.tel)
                        </td>
                        <td>
                            @Html.ActionLink("Modifier", "Edit", "Eleves", new { cne = @item.cne }, new { @class = "btn btn-warning" })
                            @Html.ActionLink("Détails", "Details", "Eleves", new { cne = @item.cne }, new { @class = "btn btn-info" })
                            @Html.ActionLink("Supprimer", "Delete", "Eleves", new { cne = @item.cne }, new { @class = "btn btn-danger", @onclick = "return confirm('Etes vous sûre de vouloir supprimer cet étudiant ?')" })
                        </td>
                    </tr>
                }}
            else
            {
                <tr style="text-align:center">
                    <td colspan="7"> @ViewBag.message </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="container">
        <div class="row justify-content-md-center">

            <div class="col-md-auto">
                <p>
                    <a asp-action="Create" class="btn btn-success">Nouveau Élève</a>
                </p>
            </div>

        </div>

    </div>
